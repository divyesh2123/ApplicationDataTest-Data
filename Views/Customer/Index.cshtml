<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Batch</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">CityMaster</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">


                        <div class="float-right">
                            <a class="btn btn-success" onclick="showInPopup('@Url.Action("AddEditBatch","CityMaster")',false)"><i class="fa fa-plus"></i> Add New</a>

                        </div>




                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="account" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                    <th>CityName</th>
                                    <th>Action</th>

                                </tr>
                            </thead>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>



<div class="offcanvas offcanvas-end" id="demo">


    <div class="offcanvas-header card-header bg-primary" id="title">



        <h5 class="modal-title" id="title">Fees Type</h5>
        <button type="button" class="close" data-bs-dismiss="offcanvas" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>

    </div>
    <div class="offcanvas-body" id="body">
    </div>


</div>



@section Scripts {
    <script>
        var Popup, dataTable;

        $(document).ready(function () {
            dataTable = $("#account").DataTable({

                 processing: true,
                 serverSide: true,
                 ordering: true,
                  order: [[0, 'asc']],
                "ajax": {
                    "url": "/Customer/GetData",
                    "type": "GET",
                    "datatype": "json"
                     
                },
                "columns": [
                    { "data": "companyName","sortable": true , orderData: [0, 1]},
                    { "data": "contactName" ,"sortable": true,  orderData: [0, 1]},
                   

                ],
                "language": {

                    "emptyTable": "No data found"
                }
            });
        });



        showInPopup = (url, edit) => {
            $.ajax({
                type: 'GET',
                url: url,
                success: function (res) {




                    $('#body').html(res);

                    if (!edit) {
                        $('#title').html('Add City');

                    }
                    else {
                        $('#title').html('Edit City');
                    }

                    var myOffcanvas = document.getElementById('demo')
                    var bsOffcanvas = new bootstrap.Offcanvas(myOffcanvas)
                    bsOffcanvas.show()


                }
            })
        }





        jQueryAjaxPost = form => {
            try {
                $.ajax({
                    type: 'POST',
                    url: form.action,
                    data: new FormData(form),
                    contentType: false,
                    processData: false,
                    success: function (res) {
                        if (res.success) {

                            $('#body').html('');
                            $('#title').html('');

                            var myOffcanvas = document.getElementById('demo')
                            let openedCanvas = bootstrap.Offcanvas.getInstance(myOffcanvas);
                            openedCanvas.hide();

                            dataTable.ajax.reload();
                            swal(res.message, {
                                icon: "success",
                            });
                        }
                        else
                            $('#form-modal .modal-body').html(res.html);
                    },
                    error: function (err) {
                        console.log(err)
                    }
                })
                //to prevent default form submit event
                return false;
            } catch (ex) {
                console.log(ex)
            }
        }

        function Delete(id) {

            swal({
                title: "Are you sure?",
                text: "Once deleted, you will not be able to recover this record!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
                showCancelButton: true,
            })
                .then((willDelete) => {
                    if (willDelete) {


                        $.ajax({
                            type: "POST",
                            url: '@Url.Action("Delete","CityMaster")/' + id,
                            success: function (data) {
                                if (data.success) {
                                    dataTable.ajax.reload();

                                    swal("Your Record has been deleted", {
                                        icon: "success",
                                    });
                                }

                                else {

                                    swal("Error");
                                }
                            }

                        });



                    }
                });

        }

    </script>
   }